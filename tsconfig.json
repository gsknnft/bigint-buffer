{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "dist",
    "tsBuildInfoFile": "build/main.tsbuildinfo",
    "declaration": true,
    "target" : "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib" : [ "ESNext", "dom" ],
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./src/types", "node_modules/@types"],
    "paths": {
      "#pkg": ["./src/conversion/src/ts/index.ts"],
      "@gsknnft/bigint-buffer/conversion": ["./src/conversion/src/ts/index.ts"]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/conversion/src/ts/**/*.ts",
    "src/conversion/src/ts/converter.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.bench.ts",
    "src/conversion/test/**/*"
  ]
}
