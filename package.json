{
  "name": "@gsknnft/bigint-buffer",
  "version": "1.4.0",
  "description": "bigint to buffer conversion with native support and built-in conversion helpers",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/browser.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./conversion": {
      "types": "./dist/conversion/index.d.ts",
      "import": "./dist/conversion/index.js",
      "require": "./dist/conversion/index.cjs"
    }
  },
  "workspaces": [],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest cover ./test/index.js",
    "coveralls": "pnpm run coverage && coveralls <coverage/lcov.info",
    "lint": "gts check",
    "install": "pnpm run rebuild:native",
    "postinstall": "pnpm run rebuild:native && pnpm run build",
    "prepare": "pnpm run compile",
    "prepublishOnly": "rm -rf build/Makefile; rm build/gyp-*; rm build/*.mk; rm build/*.Makefile; rm *.tgz",
    "clean:js": "gts clean && rm -rf build/* dist/*",
    "test:browser": "karma start karma.conf.js",
    "test:node": "mocha build/src/**/*.spec.js --timeout 40000",
    "declare": "tsc -p . --declaration --emitDeclarationOnly --outDir ./dist",
    "benchmark": "node -r ts-node/register src/index.bench.ts",
    "typedoc": "typedoc --out docs $(pwd)/src $(pwd)/helper --target es6 --mode file --tsconfig ./tsconfig.json --excludePrivate --excludeProtected --excludeNotExported --exclude '**/*+(spec|bench).ts'",
    "rebuild:native": "node-gyp rebuild",
    "build": "pnpm run compile",
    "check": "gts check",
    "test:vitest": "vitest",
    "clean": "gts clean",
    "compile": "vite build && pnpm run declare && tsc -p . && rollup -c rollup.cjs.config.js && rollup -c rollup.esm.config.js && rollup -c rollup.conversion.cjs.config.js && rollup -c rollup.conversion.esm.config.js && cpy \"index.d.ts\" ../dist --cwd build && cpy \"conversion/index.d.ts\" ../dist/conversion --cwd build",
    "fix": "gts fix",
    "pretest": "pnpm run compile",
    "posttest": "pnpm run check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gsknnft/bigint-buffer.git"
  },
  "bugs": {
    "url": "https://github.com/gsknnft/bigint-buffer/issues"
  },
  "homepage": "https://github.com/gsknnft/bigintbuffer",
  "keywords": [
    "bigint",
    "bignum",
    "tc39-bigint",
    "napi"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@juanelas/base64": "^1.1.5",
    "bindings": "^1.5.0",
    "dev": "^0.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-esm-shim": "0.1.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "6.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/benchmark": "^2.1.5",
    "@types/bn.js": "^5.2.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "bindings": "1.5.0",
    "@vitest/coverage-v8": "4.0.14",
    "assertion-error": "^1.1.0",
    "benchmark": "^2.1.4",
    "bn.js": "^5.2.2",
    "chai": "^4.1.2",
    "coveralls": "^3.1.1",
    "cpy-cli": "^6.0.0",
    "cross-env": "^6.0.3",
    "gts": "^0.8.0",
    "istanbul": "^0.4.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-env-preprocessor": "^0.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.0",
    "microtime": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2",
    "rollup": "^4.52.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "5.9.3",
    "undici-types": "^6.19.6",
    "vite": "7.2.4",
    "vitest": "^4.0.14",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    "Gordon Skinner <gsknnft@gmail.com> (https://github.com/gsknnft)",
    "Michael Wei <mwei@vmware.com> (https://github.com/no2chem)"
  ]
}
